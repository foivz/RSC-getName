<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bloodbuddy.MainActivity" >

    <Button
        android:id="@+id/changeInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp"
        android:text="Promjena informacija" />

    <TextView
        android:id="@+id/donationNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="89dp"
        android:text="U훾itavanje"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/amountDon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/donationNum"
        android:layout_below="@+id/donationNum"
        android:layout_marginTop="27dp"
        android:text="U훾itavanje"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/donationNum"
        android:layout_alignLeft="@+id/donationNum"
        android:layout_marginBottom="44dp"
        android:text="U훾itavanje"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/lastDonation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/amountDon"
        android:layout_below="@+id/amountDon"
        android:layout_marginTop="18dp"
        android:text="U훾itavanje"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
